{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row" id="signup">
		<div class="col-md-6 col-md-offset-3 pb-2 bg-success">
			<div class="card">
				<div class="card-header bg-success text-white">
	   				Sign up  [all fields are required]
	  			</div>
  				<div class="card-block">
  				
				    <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
				    	<div class="form-group{{ blah.memberName ? ' has-warning' : '' }} row">
				    		<label class="form-control-label col-4" for="memberName" data-toggle="tooltip" data-placement="top" title="This name will be used to refer to you in any communication and by which you will be known to other members.">Name</label>
				    		<div class="col-7">
								<input type="text" name="memberName" id="memberName"  placeholder="Jane Doe"value="{{ old.memberName }}" class="form-control{{ blah.memberName ? ' form-control-warning' : ''}} form-control-sm">
								<div class="form-control-feedback">{{ blah.memberName ? blah.memberName | first : ''}}
								</div>
							</div>
				    	</div>
				    	
				    	<div class="form-group{{ blah.email ? ' has-warning' : '' }} row">
				    		<label class="form-control-label col-4" for="email">Email</label>
				    		<div class="col-7">
								<input type="email" name="email" id="email" placeholder="you@domain.com" value="{{ old.email }}" class="form-control{{ blah.email ? ' form-control-warning' : ''}} form-control-sm">
								<div class="form-control-feedback">{{ blah.email ? blah.email | first : ''}}
								</div>
							</div>
				    	</div>

				    	<div class="form-group{{ blah.password ? ' has-warning' : '' }} row">
				    		<label class="form-control-label col-4" for="password" data-toggle="tooltip" data-placement="top" title="You will need this whenever you sign in.">Password</label>
				    		<div class="col-7">
								<input type="password" name="password" id="password" class="form-control{{ blah.password ? ' form-control-warning' : ''}} form-control-sm">
								<meter max="4" id="password-strength-meter"></meter>
								<div id="password-strength-text"></div>
								
								<div class="form-control-feedback">{{ blah.password ? blah.password | first : ''}}
								</div>
							</div>
				    	</div>

				    	<div class="form-group{{ blah.password_confirm ? ' has-warning' : '' }} row">
				    		<label class="form-control-label col-4" for="password_confirm">Confirm Password</label>
				    		<div class="col-7">
								<input type="password" name="password_confirm" id="password_confirm" class="form-control{{ blah.password_confirm ? ' form-control-warning' : ''}} form-control-sm">
								<div class="form-control-feedback">{{ blah.password_confirm ? blah.password_confirm | first : ''}}
								</div>
							</div>
				    	</div>

				    	<div class="form-group{{ blah.invitation ? ' has-warning' : '' }} row">
				    		<label class="form-control-label col-4" for="invitation" data-toggle="tooltip" data-placement="top" title="An invitation code will have been sent to your email address after being invited to join by another member.">Invitation Code</label>
				    		<div class="col-7">
								<input type="text" name="invitation" id="invitation" class="form-control{{ blah.invitation ? ' form-control-warning' : ''}} form-control-sm">
								<div class="form-control-feedback">{{ blah.invitation ? blah.invitation | first : ''}}
								</div>
							</div>
						</div>

				    	
						<button type="submit" class="btn btn-primary">Sign up</button>

						{{ csrf.field | raw }}
				    </form>
				    
				 </div>
			</div>
		</div>
	</div>

{% endblock %}