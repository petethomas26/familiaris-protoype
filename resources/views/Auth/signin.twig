{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
		<div class="col-md-6 col-md-offset-3 pb-2 bg-success">
			<div class="card">
				<div class="card-header bg-success">
	   				Sign in
	  			</div>
  				<div class="card-block">
				    <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">

				    	<div class="form-group{{ blah.email ? ' has-warning' : '' }}">
				    		<label class="form-control-label" for="email">Email</label>
							<input type="email" name="email" id="email" placeholder="you@domain.com" value="{{ old.email }}" class="form-control{{ blah.email ? ' form-control-warning' : ''}}">
							<div class="form-control-feedback">{{ blah.email ? blah.email | first : ''}}
							</div>
				    	</div>
				    	
				    	<div class="form-group{{ blah.password ? ' has-warning' : '' }}">
				    		<label class="form-control-label" for="password">Password</label>
							<input type="password" name="password" id="password" class="form-control{{ blah.password ? ' form-control-warning' : ''}}">
							<div class="form-control-feedback">{{ blah.password ? blah.password | first : ''}}
							</div>
				    	</div>
				    	
						<button type="submit" class="btn btn-primary">Sign in</button>

						{{ csrf.field | raw }}
				    </form>
				    
				 </div>
			</div>
		</div>
	</div>

{% endblock %}