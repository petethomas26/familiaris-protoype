{% extends 'templates/app.twig' %}

{% block content %}

<div class="row content">
	<div class="col-md-9 col-md-offset-3 pb-2 bg-primary">
		<div class="card">
			<div class="card-header bg-primary text-white text-center">
   				Notices (Only shows 10 at a time; click 'Next' for next 10)
   				<a type="button" class="close" href="{% if page == 'knowledgebase' %} {{path_for('knowledgebase')}}  {% else %} {{ path_for('membership') }} {% endif %}" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </a>
		        
  			</div>
		<!--List of all Members; to select one from-->
			
			{% if nots is not empty %}
				<table class="table table-hover">
				  	<thead>
					    <tr>
					      <th>Date</th>
					      <th>From</th>
					      <th>Heading
					      <th>Notice</th>
					      <th></th>
					    </tr>
				  	</thead>
				  	<tbody>
						{% for notice in nots|reverse %}
						    <tr>
						    	<td>{{ notice.date|date("d/m/Y") }}</td>
						    	<td>{{ notice.memberName }}</td>
						    	<td>{{ notice.heading }}</td>
						    	<td>{{ notice.notice }}</td>
						    </tr>
			  			{% endfor %}
				   	</tbody>
				</table>
				<hr>
			{% else %}
				<p>No more notices.</p>
			{% endif %}
		</div>
		<div class="card-footer">
			<a class="btn btn-primary btn-sm" type="button" href="{{ path_for('notices', {'set':set, 'no':no, 'page': page}) }}">Next</a>
			<a class="btn btn-primary btn-sm float-sm-right" type="button" href="{% if page == 'knowledgebase' %} {{path_for('knowledgebase')}}  {% else %} {{ path_for('membership') }} {% endif %}">Finish</a>
		</div>
  </div>
	</div>
</div>


{% endblock %}