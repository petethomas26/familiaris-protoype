<div class="card">
	<div class="card-header" role="tab" id="headingPolitical">
	  <h5 class="mb-0">
	    <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapsePolitical" aria-expanded="false" aria-controls="collapsePolitical">
	      Political activities
	    </a>
	  </h5>
	</div>
	<div id="collapsePolitical" class="collapse" role="tabpanel" aria-labelledby="headingPolitical">
	  <div class="card-block">
	  	<div class="inline">
	    	<h6>Involvement in political activities (local and central government).</h6>
	    
	    	<a class="btn btn-primary btn-sm" id="addPolitical" role="button" href="{{ path_for('addPolitical', {'personId' : person.id }) }}">Add Political Activity</a>
	    </div>
		{% if personDetails.politicals is empty %}
				<span><em>None known</em></span>
			
        {% else %}
		    <table class="table table-striped table-sm .table-responsive">
		    	<thead>
		    		<tr>
		    			<th>id</th>
		    			<th>Start date</th>
		    			<th>End date</th>
		    			<th>Activity</th>
		    			<th>Description</th>
		    			<th>Amend</th>
		    			<th>Drop</th>
		    		</tr>
		    	</thead>
		    	<tbody>
    			
	    			{% for political in personDetails.politcals %}
	    				<tr>
	    					<td>{{political.category.id}}</td>
							<td>{{political.category.start_date}}</td>
							<td>{{political.category.end_date}}</td>
							<td>{{political.category.activity}}</td>
							<td>{{political.category.description}}</td>
							<td>
								<a class="btn btn-primary btn-sm" id="updatePolitical" role="button" href="{{ path_for('updatePolitical', {'personId' : person.id, 'politicalId' : political.category.id}) }}"><i class="fa fa-refresh" data-toggle="tooltip" data-placement="top" title="Amend"></i></a>
							</td>
							<td>
								<a class="btn btn-primary btn-sm" id="deletePolitical" role="button" href="{{ path_for('deletePolitical', {'personId' : person.id, 'politicalId' : political.category.id }) }}"> <i class="fa fa-times" data-toggle="tooltip" data-placement="top" title="Drop" aria-hidden="true"></i></a>
							</td>
							<td>
								{% if person.id == myPersonId %}
									<label class="custom-control custom-checkbox">
										{% set check = (political.private) ? "checked" : "" %}
											<input id="privatePolitical" name="privatePolitical" type="checkbox" class="custom-control-input" {{check}} onclick="window.location = '{{ path_for("updatePrivatePolitical", {"personId": person.id, "politicalLinkId": political.politicalLinkId}) }}'">
			  							<span class="custom-control-indicator"></span>
			  							<span class="custom-control-description">private</span>
									</label>
								{% endif %}
							</td>
						</tr>
	    			{% endfor %}
	    		
	    		</tbody>
	    	</table>
	    {% endif %}
	  </div>
	</div>
</div>