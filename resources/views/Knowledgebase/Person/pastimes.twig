<div class="card">
	<div class="card-header" role="tab" id="headingFour">
	  <h5 class="mb-0">
	    <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
	      Sports and pastimes
	    </a>
	  </h5>
	</div>
	<div id="collapseFour" class="collapse" role="tabpanel" aria-labelledby="headingFour">
	  <div class="card-block">
	    <div class="inline">
	    	<h6>Sports/pastimes/hobbies played with dates and affiliations.</h6>
				
			<a class="btn btn-primary btn-sm" id="addPastime" role="button" href="{{ path_for('addPastime', {'personId' : person.id }) }}">Add Pastime</a>
		</div>
	    {% if personDetails.pastimes is empty %}
	    	<span><em>None known</em></span>
        {% else %}
		    <table class="table table-striped table-sm .table-responsive">
		    	<thead>
		    		<tr>
		    			<th>id</th>
		    			<th>From</th>
		    			<th>To</th>
		    			<th>Activity</th>
		    			<th>Club</th>
		    			<th>Description</th>
		    			<th>Amend</th>
		    			<th>Drop</th>
		    		</tr>
		    	</thead>
		    	<tbody>
    			
	    			{% for pastime in personDetails.pastimes %}
	    				<tr>
	    					<td>{{pastime.category.id}}</td>
							<td>{{pastime.category.start_year}}</td>
							<td>{{pastime.category.end_year}}</td>
							<td>{{pastime.category.activity}}</td>
							<td>{{pastime.category.club}}</td>
							<td>{{pastime.category.description}}</td>
							<td>
								<a class="btn btn-primary btn-sm" id="updatePastime" role="button" href="{{ path_for('updatePastime', {'personId' : person.id, 'pastimeId' : pastime.category.id}) }}"><i class="fa fa-refresh" data-toggle="tooltip" data-placement="top" title="Amend"></i></a>
							</td>
							<td>
								<a class="btn btn-primary btn-sm" id="deletePastime" role="button" href="{{ path_for('deletePastime', {'personId' : person.id, 'pastimeId' : pastime.category.id }) }}"> <i class="fa fa-times" data-toggle="tooltip" data-placement="top" title="Drop" aria-hidden="true"></i></a>
							</td>
							<td>
								{% if person.id == myPersonId %}
									<label class="custom-control custom-checkbox">
										{% set check = (pastime.private) ? "checked" : "" %}
											<input id="privatePastime" name="privatePastime" type="checkbox" class="custom-control-input" {{check}} onclick="window.location = '{{ path_for("updatePrivatePastime", {"personId": person.id, "pastimeLinkId": pastime.pastimeLinkId}) }}'">
			  							<span class="custom-control-indicator"></span>
			  							<span class="custom-control-description">private</span>
									</label>
								{% endif %}
							</td>
						</tr>
	    			{% endfor %}
	    		
	    		</tbody>
	    	</table>
	    {% endif %}
	  </div>
	</div>
</div>