{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row lower">
		<div class="col-md-6 col-md-offset-3 pb-2 bg-primary">
			<div class="card">
				<div class="card-header bg-primary text-white">
	   				Update service details
	   				<a type="button" class="close" href="{{ path_for('person', {'personId': personId}) }}" aria-label="Close">
			          <span aria-hidden="true">&times;</span>
			        </a>
	  			</div>
  				<div class="card-block">

			        <form method="post" action="{{ path_for('postUpdateService', {'personId' : personId, 'serviceId' : service.id}) }}" autocomplete="off">

			        	<div class="form-group {{ blah.start_year ? ' has-warning' : '' }}">
				            <label for="serviceStartYear" class="form-control-label">Start year:</label>
		            		<input type="text" class="form-control{{ blah.start_year ? ' form-control-warning' : ''}} form-control-sm" id="serviceStartYear" name="serviceStartYear"  value="{{ blah.start_year ? blah.start_year | first : service.start_year }}">
		            		<div class="form-control-feedback">{{ blah.startYear ? blah.startYear | first : ''}}</div>
			            </div>

			            <div class="form-group {{ blah.end_year ? ' has-warning' : '' }}">
				            <label for="serviceEndYear" class="form-control-label">End year:</label>
		            		<input type="text" class="form-control{{ blah.end_year ? ' form-control-warning' : ''}} form-control-sm" id="serviceEndYear" name="pastimeEndYear" value="{{ blah.end_year ? blah.end_year | first : pastime.end_year }}">
		            		<div class="form-control-feedback">{{ blah.end_year ? blah.end_year | first : ''}}</div>
			            </div>

			            <div class="form-group {{ blah.service ? ' has-warning' : '' }}">
				            <label for="serviceService"" class="form-control-label">Service:</label>
				            <input type="text" class="form-control{{ blah.service ? ' form-control-warning' : ''}} form-control-sm" id="serviceService" name="serviceService" value="{{ blah.service ? blah.service | first : service.service }}" >
				            <div class="form-control-feedback">{{ blah.service ? blah.service | first : ''}}</div>
			            </div>

			            <div class="form-group {{ blah.description ? ' has-warning' : '' }}">
				            <label for="serviceDescription" class="form-control-label">Description:</label>
				            <input type="text" class="form-control{{ blah.description ? ' form-control-warning' : ''}} form-control-sm" id="serviceDescription" name="serviceDescription" value="{{ blah.description ? blah.description | first : service.description }}" >
				            <div class="form-control-feedback">{{ blah.description ? blah.description | first : ''}}</div>
			            </div>


			            <div class="form-group inline">
							<button  type="submit" class="btn btn-primary" id="serviceSubmit">Submit</button>
							<a type="button" class="btn btn-primary" id="serviceClose" href="{{ path_for('person', {'personId': personId}) }}">Cancel</a>
							<div class="float-right">
					            <label class="btn" for="private" class="form-control-label">Keep this service private?
					            	<input type="checkbox"  id="private" autocomplete="off"  title="private" name="private" {% if private %} checked {% endif %}>
					            </label>
					            <a tabindex="0" class="btn btn-success btn-sm" role="button" data-toggle="popover" data-trigger="focus" title="Keeping data private" data-placement="top" data-content="By default, all personal details are kept private to you. To let others see this data, uncheck this box.">?</a>
			            	</div>
					    </div>
			          {{ csrf.field | raw }}
			        </form>

			      </div>
			</div>
		</div>
	</div>

{% endblock %}