<div class="card">
	<div class="card-header" role="tab" id="headingService">
	  <h5 class="mb-0">
	    <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseService" aria-expanded="false" aria-controls="collapseService">
	      Community Service
	    </a>
	  </h5>
	</div>
	<div id="collapseService" class="collapse" role="tabpanel" aria-labelledby="headingService">
	  <div class="card-block">
	  	<div class="inline">
	    	<h6>Community Service (school governing, scouts etc.)</h6>
	  
			<a class="btn btn-primary btn-sm" id="addService" role="button" href="{{ path_for('addService', {'personId' : person.id }) }}">Add Service</a>
			</div>
	   {% if personDetails.services is empty %}
	   		<span><em>None known</em></span>
       {% else %}
		   <table class="table table-striped table-sm .table-responsive">
		    	<thead>
		    		<tr>
		    			<th>id</th>
		    			<th>Start date</th>
		    			<th>End date</th>
		    			<th>Service</th>
		    			<th>Description</th>
		    			<th>Amend</th>
		    			<th>Drop</th>
		    		</tr>
		    	</thead>
		    	<tbody>
    			
	    			{% for service in personDetails.services %}
	    				<tr>
	    					<td>{{service.category.id}}</td>
							<td>{{service.category.start_date}}</td>
							<td>{{service.category.end_date}}</td>
							<td>{{service.category.service}}</td>
							<td>{{service.category.description}}</td>
							<td>
									<a class="btn btn-primary btn-sm" id="updateService" role="button" href="{{ path_for('updateService', {'personId' : person.id, 'serviceId' : service.category.id}) }}"><i class="fa fa-refresh" data-toggle="tooltip" data-placement="top" title="Amend"></i></a>
							</td>
							<td>
								<a class="btn btn-primary btn-sm" id="deleteService" role="button" href="{{ path_for('deleteService', {'personId' : person.id, 'serviceId' : service.category.id }) }}"><i class="fa fa-times" data-toggle="tooltip" data-placement="top" title="Drop" aria-hidden="true"></i></a>
							</td>
							<td>
								{% if person.id == myPersonId %}
									<label class="custom-control custom-checkbox">
										{% set check = (service.private) ? "checked" : "" %}
											<input id="privateService" name="privateService" type="checkbox" class="custom-control-input" {{check}} onclick="window.location = '{{ path_for("updatePrivateService", {"personId": person.id, "serviceLinkId": service.serviceLinkId}) }}'">
			  							<span class="custom-control-indicator"></span>
			  							<span class="custom-control-description">private</span>
									</label>
								{% endif %}
							</td>
						</tr>
	    			{% endfor %}
	    		</tbody>
	    	</table>
	    {% endif %}
	  </div>
	</div>
</div>

