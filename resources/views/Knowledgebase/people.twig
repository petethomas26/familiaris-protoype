{% extends 'templates/app.twig' %}

{% block content %}


<!--List of all Members; to select one from-->
<div class="container-fluid text-center">    
  <div class="row content">
	<div class="col-sm-2 sidenav lower">
	</div>

	<div class="col-sm-10 text-left"> 
		<h3 class="bg-success">People in Knowledgebase</h3>
		<hr>
		{% if people is not empty %}
			<table class="table table-hover">
			  	<thead>
				    <tr>
				      <th>id</th>
				      <th>First Name</th>
				      <th>Nickname</th>
				      <th>Middle Name</th>	
				      <th>Last Name</th>
				      <th>Date of birth</th>
				      <th>Born in</th>	
				      <th>Date of death</th>	
				      <th>Died at</th>
				    </tr>
			  	</thead>
			  	<tbody>
		  			
					{% for person in people %}
						
					    <tr>
					      <th scope="row">{{ person.id }}</th>
					      <td>{{ person.first_name }}</td>
					      <td>{{ person.nickname }}</td>
					      <td>{{ person.middle_name }}</td>
					      <td>{{ person.last_name }}</td>
					      <td>{{ person.date_of_birth}}</td>
					      <td>{{ person.location_of_birth }}</td>
					      <td>{{ person.date_of_death }}</td>
					      <td>{{ person.location_of_death }}</td>
					    </tr>
		  			{% endfor %}
			   	</tbody>
			</table>
		{% else %}
			<p>No people in knowledge base</p>
		{% endif %}

	</div>

  </div>

</div>

{% endblock %}

